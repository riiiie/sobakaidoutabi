<div class="col-sm-12 col-lg-4 mb-3">
  <div id="shop-id-<%= shop.id %>">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to shop.name, shop_path(shop) %>
        </h4>
        <div class='mr10 float-right'>
          <%= link_to edit_shop_path(shop) do %><i class="fa-solid fa-pen"></i><% end %>
          <%= link_to shop_path(shop), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %><i class="fa-solid fa-trash"></i><% end %>
        </div>
        <ul class="list-inline">
          <li class="list-inline-item">
            <i class="fa-solid fa-user"></i>
          </li>
          <li class="list-inline-item">
            <i class="fa-solid fa-user"></i>
            <%= l shop.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= shop.address %></p>
      </div>
    </div>
  </div>
</div>